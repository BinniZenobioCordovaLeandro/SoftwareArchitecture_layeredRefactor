{
    "compilerOptions": {
        "outDir": "dist",
        "module": "commonjs",
        "target": "es2017",
        "strict": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "strictFunctionTypes": true,
        "strictBindCallApply": true,
        "strictPropertyInitialization": true,
        "noImplicitThis": true,
        "alwaysStrict": true,
        "esModuleInterop": true,
        "baseUrl": "lib",
        "paths": {
            "@application/*": ["application/*"],
            "@domain/*": ["domain/*"],
            "@infrastructure/*": ["infrastructure/*"],
            "@presentation/*": ["presentation/*"]
        }
    },
    "include": ["lib/**/*"]
}
